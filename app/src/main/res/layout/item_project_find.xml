<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/project_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_univ_projectfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLet="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:textColor="@color/light_orange"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loca_projectfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:textColor="@color/light_orange"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_univ_projectfind"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dday_projectfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:textColor="@color/light_orange"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tv_loca_projectfind"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_projectfind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:ellipsize="end"
        android:fontFamily="@font/noto_medium"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="@color/four_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_univ_projectfind" />

    <TextView
        android:id="@+id/tv_type_projectfind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/noto_regular"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="@color/text_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_projectfind" />

    <TextView
        android:id="@+id/tv_field_projectfind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/noto_regular"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="@color/text_grey"
        app:layout_constraintStart_toEndOf="@+id/tv_type_projectfind"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_projectfind" />

    <TextView
        android:id="@+id/tv_position_projectfind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"

        android:fontFamily="@font/noto_regular"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:textColor="@color/text_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_field_projectfind"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_projectfind" />

    <ImageView
        android:id="@+id/iv_star_projectfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_star_24_dp"/>

    <include
        layout="@layout/line_gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_position_projectfind"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>